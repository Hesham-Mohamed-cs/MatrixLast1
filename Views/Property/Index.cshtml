@model IEnumerable<MatrixTask.Entity.Property>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-success" asp-action="Add" asp-controller="Property" > Add New Prperty  </a>

<h1>Index</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
           
            <th scope="col">Property Name  </th>
            <th scope="col"> Category Name </th>
      
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td> <a class="btn btn-primary" asp-action="Edit" asp-controller="Property" asp-route-id="@item.PropertyId"> Edit </a> </td>
            </tr>
        }
     
     
    </tbody>
</table>
